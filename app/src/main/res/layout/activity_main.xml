<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mobinotify.engmobi.MainActivity">

    <Button
        android:id="@+id/button5"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:text="Stats" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="133dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button5"
        android:lineSpacingExtra="24sp"
        android:text="Frequency"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp">

        <RadioButton
            android:id="@+id/everymin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="Every 5 Min." />

        <RadioButton
            android:id="@+id/every60min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="Every 30 Min." />

        <RadioButton
            android:id="@+id/every30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="Every 60 Min. " />

    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="133dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="180dp"
        android:lineSpacingExtra="24sp"
        android:text="Type"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp">

        <CheckBox
            android:id="@+id/vocab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="Vocab." />

        <CheckBox
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="Subjective Question" />

        <CheckBox
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimaryDark"
            android:text="Objective" />
    </RadioGroup>

    <Button
        android:id="@+id/button1"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="50dp"
        android:text="START"
        android:textAllCaps="false"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button1"
        android:layout_marginEnd="16dp"
        android:onClick="clickedFunction"
        android:text="STOP"
        android:textSize="24sp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:buttonTint="@color/colorPrimaryDark"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="90dp"
        android:text="  Pause Notification" />

    <Button
        android:id="@+id/button3"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/switch1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="260dp"
        android:text="Add" />

</RelativeLayout>
